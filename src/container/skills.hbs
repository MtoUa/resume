<main class="row g-3">
    {{#with main}}
        <section class="col-4">
            <div class="card">
                <h2 class="card-header">My skills</h2>
                <ul class="list-group list-group-flush">
                    {{#each skills}}
                        <li class="list-group-item">
                            <span class="h6">{{name}}</span>
                            {{#if point includeZero=true}} ({{point}}) {{/if}}
                            {{#if isTop}}
                                <span class="badge bg-warning rounded-pill text-uppercase align-top">Top</span>
                            {{/if}}
                            {{#unless point includeZero=true}}
                                <span class="badge bg-secondary rounded-pill align-top">Not studied</span>
                            {{/unless}}
                            {{#unless point}}
                                {{#if point includeZero=true}}
                                    <span class="badge bg-info rounded-pill align-top">In study</span>
                                {{/if}}
                            {{/unless}}
                        </li>
                    {{/each}}
                </ul>
            </div>
        </section>

        <section class="col-4">
            <div class="card">
                <h2 class="card-header">My hobbies</h2>
                <ul class="list-group list-group-flush">
                    {{#each hobbies}}
                        <li class="list-group-item">
                            <span class="h6">{{name}}</span>
                            {{#if isMain}}
                                <span class="badge bg-success rounded-pill align-top">Favourite</span>
                            {{/if}}
                        </li>
                    {{/each}}
                </ul>
            </div>
        </section>
    {{/with}}
</main>