<div>

    {{#with main}}
    <main>
        <section>
            {{> title big=true data='Work history'}}
            <ul>
                {{#each works}}
                <li>
                    <div>{{position}}</div>

                    <br />

                    <div>
                        {{duration.from}} â€“

                        {{#if duration.to}}
                        {{duration.to}}

                        {{else}}
                        Now

                        {{/if}}
                    </div>

                    <br />

                    {{#with company}}
                    <div>
                        {{#if url}}
                        {{> link href=url text=name blank=true noLine=true}}
                        {{else}}
                        <b>{{name}}</b>
                        {{/if}}
                    </div>
                    {{/with}}

                    <br />
                    <br />

                    <div>
                        <strong>Projects({{projectAmount}}):</strong>
                    </div>

                    <br />

                    <ul>
                        {{#each projects}}
                        <li>
                            <div>{{> link href=url text=name blank=true noLine=true}}</div>

                            <br />

                            <div>
                                <p>{{about}}</p>
                            </div>

                            <br />

                            <div>
                                <em>Project stacks({{stackAmount}}):</em>
                            </div>

                            <br />

                            <div>
                                <ul>
                                    {{#each stacks}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>
                            </div>

                            <br />

                            <div>
                                <em>Project awards({{awardAmount}}):</em>
                            </div>

                            <br />

                            <div>
                                <ul>
                                    {{#each awards}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </li>
                <br />
                {{/each}}
            </ul>
        </section>

    </main>
    {{/with}}
</div>