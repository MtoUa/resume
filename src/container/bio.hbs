<main class="card mb-4">
    <div class="card-body">
        <h1 class="card-title display-3 mb-3">{{name}}</h1>
        <section>
            <div class="card mb-3">
                <div class="card-body pt-2">
                    <div class="card-title display-6 mb-3">Main info</div>
                    <section class="row g-3">
                        <section class="col-4">
                            <div class="card h-100">
                                <div class="card-header h4">Known for:</div>
                                <ul class="card-body pt-2 pb-0 ms-3">
                                    {{#each known_for}}
                                    <li{{#unless @last}} class="mb-2" {{/unless}}>
                                        <strong>{{this}}</strong>
                                        </li>
                                        {{/each}}
                                </ul>
                            </div>
                        </section>
                        <section class="col">
                            <div class="card h-100">
                                <div class="card-header h4">Short bio:</div>
                                <p class="card-body pt-2 pb-0">
                                    Was born on <b>
                                        <time>{{birthdate}}</time>
                                    </b>
                                    <em>in {{birthplace}}.</em>
                                    Died <b>
                                        <time>{{deathdate}}</time>
                                    </b>
                                    <i>in {{deathplace}}.</i>
                                    By nationality {{nationality}}
                                    and {{occupation}} by occupation.
                                    {{#each education}}
                                    {{degree}} in {{field}}, {{institution}}, {{year}}.
                                    {{/each}}
                                </p>
                            </div>
                        </section>
                    </section>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body pt-2">
                    <div class="card-title display-6 mb-3">Science activity</div>
                    <section class="row g-3">
                        <section class="col">
                            <div class="card h-100">
                                <div class="card-header h4">Notable publications:</div>
                                <ul class="card-body pt-2 pb-0 ms-3">
                                    {{#each notable_publications}}
                                    <li{{#unless @last}} class="mb-2" {{/unless}}>
                                        <i>"{{title}}"</i> (<time>{{year}}</time>, {{publisher}})
                                        </li>
                                        {{/each}}
                                </ul>
                            </div>
                        </section>
                        <section class="col">
                            <div class="card h-100">
                                <div class="card-header h4">Major discoveries:</div>
                                <ul class="card-body pt-2 pb-0 ms-3">
                                    {{#each major_discoveries}}
                                    <li{{#unless @last}} class="mb-2" {{/unless}}>
                                        <b>{{title}}</b> (<time>{{year}}</time>) – {{description}}
                                        </li>
                                        {{/each}}
                                </ul>
                            </div>
                        </section>
                        <section class="col">
                            <div class="card h-100">
                                <div class="card-header h4">Awards:</div>
                                <ul class="card-body pt-2 pb-0 ms-3">
                                    {{#each awards}}
                                    <li{{#unless @last}} class="mb-2" {{/unless}}>
                                        <b>{{title}}</b> (<time>{{year}}</time>) – {{description}}
                                        </li>
                                        {{/each}}
                                </ul>
                            </div>
                        </section>
                    </section>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body pt-2">
                    <div class="card-title display-6 mb-3">Influence</div>
                    <section class="row g-3">
                        <section class="col">
                            <div class="card h-100">
                                <div class="card-header h4">Partners:</div>
                                <ul class="card-body pt-2 pb-0 ms-3">
                                    {{#each partners}}
                                    <li{{#unless @last}} class="mb-2" {{/unless}}>
                                        <i>{{name}}</i>, {{relationship}} (<time>{{years}}</time>)
                                        </li>
                                        {{/each}}
                                </ul>
                            </div>
                        </section>
                        <section class="col">
                            <div class="card h-100">
                                <div class="card-header h4">Influences:</div>
                                <ul class="card-body pt-2 pb-0 ms-3">
                                    {{#each influences}}
                                    <li{{#unless @last}} class="mb-2" {{/unless}}>
                                        <i>{{this}}</i>
                                        </li>
                                        {{/each}}
                                </ul>
                            </div>
                        </section>
                        <section class="col">
                            <div class="card h-100">
                                <div class="card-header h4">Influenced:</div>
                                <ul class="card-body pt-2 pb-0 ms-3">
                                    {{#each influenced}}
                                    <li{{#unless @last}} class="mb-2" {{/unless}}>
                                        <em>{{this}}</em>
                                        </li>
                                        {{/each}}
                                </ul>
                            </div>
                        </section>
                    </section>
                </div>
            </div>
            <div class="card">
                <div class="card-body pt-2">
                    <div class="card-title display-6 mb-3">The best quotes</div>
                    <ul class="list-group ">
                        {{#each quotes}}
                        <li class="list-group-item">
                            <q>
                                <b>
                                    <i>{{this}}</i>
                                </b>
                            </q>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </section>
    </div>
</main>

<section class="row g-3">
    <div class="col-6">
        <div class="card mb-5">
            {{#with contributions}}
            <div class="card-header h3">{{title}}</div>
            <div class="card-body pt-2">
                <section>
                    <div class="mb-2">
                        <i>
                            <time>{{year}}</time>
                        </i>
                    </div>
                    <p class="mb-1">{{description}}</p>
                </section>
                <section>
                    <div class="col-form-label h6 mb-1">
                        What was his first invention?
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <input class="form-control" placeholder="{{field}}">
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-secondary">Submit</button>
                        </div>
                    </div>
                </section>
            </div>
            {{/with}}
        </div>
    </div>
</section>