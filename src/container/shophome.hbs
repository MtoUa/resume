<nav class="card py-2 mb-5">
    <div class="nav">
        {{#with navigation}}
        {{#each links}}
        <div class="nav-item">
            <a class="nav-link" href="{{href}}">{{text}}</a>
        </div>
        {{/each}}
        {{/with}}
        <div class="nav-item">
            <a class="nav-link disabled" href="#">News</a>
        </div>
    </div>
</nav>

<section>
    {{#with newsBlock}}
    <h1 class="text-center mb-4">{{title}}</h1>

    <div class="row gx-2 gy-3">
        {{#each cards}}
        <div class="col-3">
            <div class="card text-bg-dark">
                <div class="card-header">
                    {{title}}
                    {{#if isNew}}
                    <div class="badge text-bg-success rounded-pill px-2">New</div>
                    {{/if}}
                    {{#if isTop}}
                    <div class="badge text-bg-danger rounded-pill px-2">Top</div>
                    {{/if}}
                </div>
                <div class="card-body">
                    {{description}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
</section>

<hr class="my-5" />

<section>
    {{#with goodsBlock}}
    <nav class="nav nav-tabs mb-5">
        {{#each tabs}}
        <div class="nav-item">
            <div class="nav-link {{#if isActive}}active{{/if}}
            {{#if isDisabled}}disabled{{/if}}">
                {{text}}
            </div>
        </div>
        {{/each}}
    </nav>

    <div class="row gx-2 gy-3">
        {{#each cards}}
        <div class="col-4">
            <div class="card">
                <img class="card-img-top" src="{{image}}" alt="{{title}}">
                <div class="card-body">
                    <div class="card-title h6">
                        {{title}}
                        {{#if isHot}}
                        <div class="badge text-bg-warning
                        text-light text-uppercase rounded-pill px-2">
                            Hot!
                        </div>
                        {{/if}}
                        {{#if isNew}}
                        <div class="badge text-bg-primary rounded-pill px-2">
                            New
                        </div>
                        {{/if}}
                    </div>
                    <p class="m-0">{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
</section>

<hr class="my-5" />

<section class="card text-bg-dark">
    {{#with subscribe}}
    <div class="card-body">
        <h2 class="card-title mt-0 mb-4">{{header}}</h2>
        <p>{{description}}</p>
        {{#each buttons}}
        <div class="mt-3">
            <a class="btn btn-primary" href="{{link}}">{{text}}</a>
        </div>
        {{/each}}
    </div>
    {{/with}}
</section>

<hr class="my-5" />

<section class="card text-bg-success text-center">
    {{#with service}}
    <div class="card-body">
        <h2 class="card-title">{{title}}</h2>
        <p class="my-4">{{description}}</p>
        {{#each buttons}}
        <div class="mt-3">
            <a class="btn btn-primary" href="{{link}}">{{text}}</a>
        </div>
        {{/each}}
    </div>
    {{/with}}
</section>

<hr class="mt-5 mb-4" />

<footer class="row mb-5">
    <nav class="nav">
        {{#each footer}}
        <div class="col-2">
            {{#each this}}
            <a class="nav-link
            {{#if @last}}disabled{{/if}}" href="{{link}}">{{text}}</a>
            {{/each}}
        </div>
        {{/each}}
    </nav>
</footer>