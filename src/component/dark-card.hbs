<section class="card text-bg-dark">
    {{#with subscribe}}
        <div class="card-body">
            <h2 class="card-title mt-0">{{header}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
                <div class="mt-3">
                    <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                </div>
            {{/each}}
        </div>
    {{/with}}
</section>